<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon.uuf</groupId>
        <artifactId>carbon-uuf</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../../../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.uuf.core.feature</artifactId>
    <packaging>carbon-feature</packaging>
    <name>WSO2 UUF Core Feature</name>
    <url>http://wso2.org</url>
    <description>This feature contains the core bundles required by the UUF Core feature</description>

    <dependencies>
        <dependency>
            <groupId>com.github.jknack</groupId>
            <artifactId>handlebars</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.orbit.org.yaml</groupId>
            <artifactId>snakeyaml</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.uuf</groupId>
            <artifactId>uuf-core</artifactId>
            <version>${uuf.version}</version>
        </dependency>
        <dependency>
            <groupId>org.antlr</groupId>
            <artifactId>antlr4-runtime</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>
        <dependency>
            <groupId>io.mszu.scripting</groupId>
            <artifactId>nashorn-scripting-api-fragment</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.wso2.carbon.maven</groupId>
                <artifactId>carbon-feature-plugin</artifactId>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <id>1-p2-feature-generation</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>

                            <propertyFile>../etc/feature.properties</propertyFile>
                            <adviceFileContents>
                                <advice>
                                    <name>org.wso2.carbon.p2.category.type</name>
                                    <value>server</value>
                                </advice>
                                <advice>
                                    <name>org.eclipse.equinox.p2.type.group</name>
                                    <value>false</value>
                                </advice>
                            </adviceFileContents>
                            <bundles>
                                <bundle>
                                    <symbolicName>uuf-core</symbolicName>
                                    <version>${uuf.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>handlebars</symbolicName>
                                    <version>${com.github.jknack.handlebars.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>snakeyaml</symbolicName>
                                    <version>${org.wso2.orbit.org.yaml.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>org.antlr.antlr4-runtime-osgi</symbolicName>
                                    <version>${antlr-version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>io.mszu.scripting.nashorn-scripting-api-fragment</symbolicName>
                                    <version>${nashorn-fragment.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>org.apache.commons.lang3</symbolicName>
                                    <version>${org.apache.commons.commons-lang3.version}</version>
                                </bundle>
                                <!-- Metrics Bundles - End -->
                            </bundles>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
